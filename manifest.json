{
  "manifest_version": 2,
  "name": "Zhihu Search",
  "version": "1.0",
  "description": "Quick way to search on zhihu while using chrome.",
  
  "options_page": "options.html",
  
  "icons":
  {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon64.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "在知乎中搜索",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon64.png"
    }
  },
  
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      }
    }
  },
  
  "homepage_url": "https://github.com/Tokunaga-24253/zhihuSearch-on-Chrome"
  
  
}
